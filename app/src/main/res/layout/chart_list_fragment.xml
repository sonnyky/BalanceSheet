<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:id="@+id/chart_fragment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is fragment No.1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/delete_chart_button"
                    android:layout_above="@+id/edit_chart_info_button" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/delete_chart_button"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_chart_info_button"
                    android:src="@drawable/ic_create_black_24dp"
                    android:layout_gravity="right"
                    android:layout_below="@+id/delete_chart_button"
                    android:layout_toEndOf="@+id/chart_fragment_name" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>